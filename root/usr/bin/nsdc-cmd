# Execute a command inside the containter

. /usr/share/nethserver-dc/nsdc-functions

function help
{
    echo "Usage: $0 [-r] <cmd> [<args1> ... <argsN>]"
    echo "  -r : execute raw command - use it for reading from stdin"
    exit 1
}

raw=0
while getopts ":h:r" opt; do
  case $opt in
    h)
      help
      ;;
    r)
      raw=1
      shift
      ;;
    \?)
      echo "Invalid option: -$OPTARG" >&2
      ;;
  esac
done

if [ $# -eq 0 ]; then
    help
fi

if [ $raw -eq 1 ]; then
    cmd_raw $@
else
    cmd $@
fi
