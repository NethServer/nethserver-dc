#
# Functions for nsdc management
#

# Execute a command inside the container
#  - redirect all stderr to stdout
#  - remove dbclient warning output: first 2 lines
cmd () {
    LANG=C dbclient -yy -i /var/lib/nethserver/nsdc/nsdc.key root@$(/sbin/e-smith/config getprop nsdc IpAddress) $@ 2>&1 | tail -n+3
}

# Execute a command inside the container
#   - raw command, no output/input management is performed
cmd_raw () {
    LANG=C dbclient -yy -i /var/lib/nethserver/nsdc/nsdc.key root@$(/sbin/e-smith/config getprop nsdc IpAddress) $@
}
