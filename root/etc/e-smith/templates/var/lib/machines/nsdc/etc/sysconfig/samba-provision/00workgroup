    $workgroup = 'WORKGROUP';
    if(defined $smb{'Workgroup'} && $smb{'Workgroup'}) {
        $workgroup = $smb{'Workgroup'};
    } elsif($sssd{'Provider'} eq 'ad') {
        $workgroup = uc((split('\.', $DomainName))[0]);
    }
    $workgroup = substr($workgroup, 0, 15);
    '';
}