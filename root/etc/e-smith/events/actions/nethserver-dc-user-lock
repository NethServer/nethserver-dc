if ! [ $# -ge 2 ]; then
   echo "[ERROR] Not enough arguments."
   exit 2
fi

EVENT=$1
USER=$2
DOMAIN=$(hostname -d)

if ! [[ $USER == *"@${DOMAIN}" ]]; then
    echo "[NOTICE] Skipping user ${USER}, it doesn't belong to our domain."
    exit 0
fi

exec expect -f - <<EOF
spawn -noecho /usr/bin/systemd-run -M nsdc -q -t /usr/bin/samba-tool user disable "${USER%@${DOMAIN}}"
expect {
    "ERROR" {exit 1}
    eof {exit 0}
}
exit 2
EOF
