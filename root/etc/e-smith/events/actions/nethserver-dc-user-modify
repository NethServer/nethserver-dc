use strict;
use Errno;
use NethServer::SSSD; 
use File::Temp;

my $event = shift;
my $userName = shift;
my $FullName = shift;
my $shell = shift || '/usr/libexec/openssh/sftp-server';

if(! defined ($userName)) {
    die "Username argument missing\n";
}

my $sssd = new NethServer::SSSD();
my $baseDN = $sssd->baseDN(); 

#accept user@domain format
$userName =~ s/@.*//;

#Modify user FullName
system(qq(expect -c 'spawn -noecho /usr/bin/systemd-run -M nsdc -q -t /usr/bin/pdbedit -u "$userName" "--fullname=$FullName"; expect "Unix username:" { exit 0 }; exit 3' >/dev/null));
if ($? != 0) {
    die("[ERROR] User $userName modification failed\n");
}


#Create a temporary ldif file (root:root 0600)
my $fileName = File::Temp->new(
    UNLINK   => 0,
    TEMPLATE => "$userName.XXXXXXXXXX",
    DIR => '/var/lib/machines/nsdc/var/spool/'
);

#create the ldif content
my $contentFile = qq (
dn: cn=$userName,cn=Users,$baseDN
changetype: modify
replace: loginShell
loginShell: $shell
);

#print the ldif content in the tempfile
print $fileName $contentFile;

#we need the relative path in the container
my $relativePathFile = $fileName;
$relativePathFile =~ s|/var/lib/machines/nsdc||;

#modify the samba LDAP
system(qq(expect -c 'spawn -noecho /usr/bin/systemd-run -M nsdc -q -t /usr/bin/ldbmodify -H /var/lib/samba/private/sam.ldb $relativePathFile;
    expect "Modified 1 records successfully" { exit 0 }; exit 3' >/dev/null));

if ($? != 0) {
    die("[ERROR] User $userName shell modification failed\n");
}

unlink $fileName or die "[ERROR]: Impossible to unlink $fileName";
