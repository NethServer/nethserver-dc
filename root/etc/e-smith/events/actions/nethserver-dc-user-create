use strict;
use Errno;
use File::Path;

my $homeDirPrefix = '/var/lib/nethserver/home/';

my $event = shift;
my $userName = shift;
my $FullName = shift || '';
my $shell = shift || '/usr/libexec/openssh/sftp-server';

if(! defined ($userName)) {
    die "Username argument missing\n";
}

if( ! -x $shell) {
    warn "Given shell `$shell` is not executable";
    $shell = '/bin/false';
}

if ($FullName eq '') {
    $FullName = $userName;
}

#accept user@domain format
$userName =~ s/@.*//;

#Create user
system('expect', '-c', qq(spawn -noecho /usr/bin/systemd-run -M nsdc -q -t /usr/bin/samba-tool user create "$userName" --random-password --must-change-at-next-login "--login-shell=$shell" "--unix-home=$homeDirPrefix$userName" "--given-name=$FullName" --use-username-as-cn; expect "User '$userName' created successfully" { exit 0 }; exit 3));
if ($? != 0) {
    die("[ERROR] User $userName creation failed\n");
}

